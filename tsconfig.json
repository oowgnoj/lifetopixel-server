{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "typeRoots": [
    "./node_modules/@types",
    "./src/types"
  ],
  "exclude": ["node_modules", "dist"],
}
